{
    "name": "ft_transcendence",
    "version": "1.0.0",
    "main": "app.js",
    "type": "module",
    "scripts": {
        "create:dirs": "mkdir -p dist/frontend dist/assets/styles",
        "build:css": "postcss ./styles/_index.css -o dist/assets/styles/main.css",
        "copy:assets": "cp -Rf assets/* dist/assets/ && cp -Rf frontend/* dist/frontend/",

        "build:ts": "tsc",
        "watch:ts": "tsc --watch",
        "watch:server": "nodemon --watch dist --ext js ./dist/app.js",

        "build": "npm run create:dirs && npm run build:css && npm run copy:assets && npm run build:ts",
        "dev": "npm run build && concurrently \"npm run watch:ts\" \"npm run watch:server\"",
        "refresh": "rm -rf uploads db.sqlite node_modules dist package-lock.json && npm install && npm run dev"
    },
    "dependencies": {
        "@fastify/cookie": "^11.0.2",
        "@fastify/cors": "^11.0.1",
        "@fastify/multipart": "^9.0.3",
        "@fastify/static": "^8.1.1",
        "@fastify/websocket": "^11.0.2",
        "@fortawesome/fontawesome-free": "^6.7.2",
        "@tailwindcss/cli": "^4.1.3",
        "@types/bcrypt": "^5.0.2",
        "@types/better-sqlite3": "^7.6.13",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.14.1",
        "@types/qrcode": "^1.5.5",
        "@types/speakeasy": "^2.0.10",
        "@types/ws": "^8.18.1",
        "bcrypt": "^5.1.1",
        "better-sqlite3": "^11.9.1",
        "dotenv": "^16.5.0",
        "fastify": "^5.3.0",
        "google-auth-library": "^9.15.1",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^6.10.1",
        "qrcode": "^1.5.4",
        "speakeasy": "^2.0.0",
        "tailwindcss": "^4.1.3",
        "typeorm": "^0.3.22",
        "typeorm-fastify-plugin": "^3.0.0",
        "typescript": "^5.8.3",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.3",
        "@types/nodemailer": "^6.4.17",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "nodemon": "^3.1.9",
        "postcss-cli": "^11.0.1"
    }
}
